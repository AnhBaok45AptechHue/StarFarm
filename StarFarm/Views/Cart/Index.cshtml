@model List<StarFarm.Models.ViewModel.CartItem>

@{
    ViewBag.Title = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.css" integrity="sha512-3icgkoIO5qm2D4bGSUkPqeQ96LS8+ukJC7Eqhl1H5B2OJMEnFqLmNDxXVmtV/eq5M65tTDkUYS/Q0P4gvZv+yA==" crossorigin="anonymous" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.js"></script>


<link href="~/Content/css/cart.css" rel="stylesheet" />



<div class="container">
    <ul class="breadcrumb" style="--bs-breadcrumb-divider:'>';">
        <li class="breadcrumb-item">
            <a class="text-decoration-none link-dark" href="../index.html">
                <i class="fas fa-home"></i>Home
            </a>
        </li>
        <li class="breadcrumb-item active">
            SHOPPING CARD
        </li>
    </ul>
</div>
<!-- Main -->
<div class="container my-3">

    <div>
        <h2>item in your card</h2>
    </div>

    <div class="container" onload="total();">
        <div class="table-wrap">
            <table class="table table-responsive table-borderless">
                <thead>
                <th>&nbsp;</th>

                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>total</th>
                <th>Del</th>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="align-middle alert border-bottom product" role="alert">

                            <td class="text-center">
                                <img class="" src="~/Content/image/@item.ImageUrl" alt="@item.ProductName">
                            </td>
                            <td>
                                <div>
                                    <p class="m-0 fw-bold">Organic Spelt Flakes, 12 oz (340 g) </p>

                                </div>
                            </td>
                            <td>
                                <div class="fw-600 product-price">@item.Price</div>
                            </td>
                            <td class="d-flex product-quantity">
                                <input class="input" min="0" value="1" type="number" id="itemPrice">
                            </td>
                            <td>  <span class="product-line-price" id="itemTotal"></span></td>
                            <td class="product-removal">
                                <a href="@Url.Action("RemoveFromCart", new { controller = "Cart", id =item.ProductId })" class="btn ">
                                    <span class="fas fa-times"></span>
                                </a>

                            </td>
                        </tr>
                    }



                </tbody>

            </table>

        </div>
        <div>
            <div class="totals">
                <div class="totals-item">
                    <label>Subtotal</label>
                    <div class="totals-value cart-subtotal"></div>
                </div>
                <div class="totals-item">
                    <label>Tax (5%)</label>
                    <div class="totals-value" id="cart-tax"></div>
                </div>
                <div class="totals-item">
                    <label>Shipping</label>
                    <div class="totals-value" id="cart-shipping">6.17</div>
                </div>
                <div class="totals-item totals-item-total">
                    <label>Grand Total</label>
                    <div class="totals-value" id="cart-total"></div>
                </div>
            </div>
            <div class="checkOut">
                <button type="button" class="btn continute">
                    <a href="products.html"> <i class="fas fa-cart-arrow-down"></i> Continue Shopping</a>
                </button>

                <button type="button" class="btn btn-success buy ">
                    <a href="login.html">Checkout</a>
                </button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js" integrity="sha512-n/4gHW3atM3QqRcbCn6ewmpxcLAHGaDjpEBu4xZd47N0W2oQ+6q7oc3PXstrJYXcbNU1OHdQ1T7pAP+gi5Yu8g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script type="text/javascript" src="http://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
<script src="~/Scripts/cart.js"></script>